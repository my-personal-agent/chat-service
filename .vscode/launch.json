{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Chat API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "3000",
                "--lifespan", "on"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}",
                "ENV": "local"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
